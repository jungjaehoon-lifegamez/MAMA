{
  "mcpServers": {
    "spinelift": {
      "command": "node",
      "args": [
        "/home/hoons/spineLiftWASM/mcp-server/dist/server.js"
      ],
      "env": {
        "JWT_SECRET": "${MCP_JWT_SECRET:-4be16b30ce570e7a4173c0b1fa60bc10a6bf90ae5e9212340c30823b35f373c33ff25d00a13560fd6ecac5d875ff72777a2d27b804135005bc1e1929c13e7b4f}",
        "RAILS_API_URL": "${MCP_RAILS_API_URL:-http://localhost:3001}",
        "NODE_ENV": "${MCP_NODE_ENV:-development}",
        "LOG_LEVEL": "${MCP_LOG_LEVEL:-debug}",
        "HTTP_PORT": "${MCP_HTTP_PORT:-3101}"
      },
      "description": "SpineLift WASM mesh generation - Local Development (stdio)"
    },
    "spinelift-railway": {
      "transport": "sse",
      "url": "https://spineliftwasm-mcp.up.railway.app/sse",
      "description": "SpineLift WASM - Railway Production (SSE) - Connect to production MAMA"
    },
    "spinelift-railway-sse": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://spineliftwasm-mcp.up.railway.app/sse"
      ],
      "description": "SpineLift WASM - Railway Production via mcp-remote (SSE bridge)"
    }
  }
}
