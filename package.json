{
  "name": "claude-mama",
  "version": "1.0.0",
  "private": true,
  "description": "Memory-Augmented MCP Assistant (MAMA) for Claude Code & Desktop - Monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/jungjaehoon-lifegamez/MAMA.git"
  },
  "homepage": "https://github.com/jungjaehoon-lifegamez/MAMA#readme",
  "bugs": {
    "url": "https://github.com/jungjaehoon-lifegamez/MAMA/issues"
  },
  "keywords": [
    "claude-code",
    "claude-desktop",
    "mcp-server",
    "memory-assistant",
    "monorepo"
  ],
  "author": "SpineLift Team",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "pnpm -r test",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint packages/*/src packages/*/tests --ext .js,.mjs,.ts",
    "lint:fix": "eslint packages/*/src packages/*/tests --ext .js,.mjs,.ts --fix",
    "format": "prettier --write \"packages/*/{src,tests}/**/*.{js,mjs,ts,json,md}\"",
    "format:check": "prettier --check \"packages/*/{src,tests}/**/*.{js,mjs,ts,json,md}\"",
    "sync-versions": "node scripts/sync-versions.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,mjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  }
}
