{
  "name": "@jungjaehoon/mama-core",
  "version": "1.1.1",
  "description": "MAMA Core - Shared modules for Memory-Augmented MCP Assistant",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./embeddings": "./dist/embeddings.js",
    "./embedding-cache": "./dist/embedding-cache.js",
    "./embedding-client": "./dist/embedding-client.js",
    "./embedding-server": "./dist/embedding-server/index.js",
    "./memory-store": "./dist/memory-store.js",
    "./db-manager": "./dist/db-manager.js",
    "./db-adapter": "./dist/db-adapter/index.js",
    "./mama-api": "./dist/mama-api.js",
    "./config-loader": "./dist/config-loader.js",
